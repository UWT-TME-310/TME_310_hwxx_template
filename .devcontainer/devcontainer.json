{
  "name": "Python + Jupyter (fast start)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "github.copilot",
        "github.copilot-chat",
        "ms-toolsai.datawrangler",
        "quarto.quarto"
      ],
      "settings": {
        "python.analysis.indexing": true,
        "jupyter.askForKernelRestart": false
      }
    }
  },
  "postCreateCommand": "pip install -U pip && pip install -r requirements.txt || true",
  "updateContentCommand": "pip install -r requirements.txt || true"
}